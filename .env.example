# ==============================================================================
# MING Stack Environment Configuration
# ==============================================================================
# Copy this file to .env and customize as needed:
#   cp .env.example .env
# ==============================================================================

# ------------------------------------------------------------------------------
# General
# ------------------------------------------------------------------------------
TZ=UTC

# ------------------------------------------------------------------------------
# InfluxDB
# ------------------------------------------------------------------------------
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=adminpassword
INFLUXDB_ORG=ming
INFLUXDB_BUCKET=iot
INFLUXDB_TOKEN=ming-stack-token

# ------------------------------------------------------------------------------
# Grafana
# ------------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=adminpassword

# ------------------------------------------------------------------------------
# n8n
# ------------------------------------------------------------------------------
N8N_USER=admin
N8N_PASSWORD=adminpassword
N8N_HOST=localhost

# ------------------------------------------------------------------------------
# Ollama
# ------------------------------------------------------------------------------
# Default model to pull on startup (optional, pull manually via API)
# OLLAMA_MODEL=llama3.2

# ------------------------------------------------------------------------------
# Edge Impulse (optional)
# ------------------------------------------------------------------------------
# EI_API_KEY=your-edge-impulse-api-key
# EI_PROJECT_ID=your-project-id
